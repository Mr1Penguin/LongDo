{
    "version": 6,
    "cmakeMinimumRequired": {
	"major": 3,
	"minor": 23,
	"patch": 0
    },
    "configurePresets": [
	{
	    "name": "default",
	    "generator": "Ninja",
	    "binaryDir": "${sourceDir}/build/default"
	},
	{
	    "name": "ninja-multi",
	    "inherits": "default",
	    "generator": "Ninja Multi-Config"
	},
	{
	    "name": "clang-tidy",
	    "inherits": "default",
	    "binaryDir": "${sourceDir}/build/clang-tidy",
	    "cacheVariables": {
		"CMAKE_BUILD_TYPE": "RelWithDebInfo",
	        "CMAKE_CXX_CLANG_TIDY": "clang-tidy",
	        "CLANG_TIDY_RUN": "ON"
	    },
	    "environment": {
		"CXX": "clang++"
	    }
	},
	{
	    "name": "clazy",
	    "inherits": "default",
	    "binaryDir": "${sourceDir}/build/clazy",
	    "cacheVariables": {
		"CMAKE_BUILD_TYPE": "RelWithDebInfo",
	        "CMAKE_CXX_COMPILER": "clazy"
	    },
	    "environment": {
		"CXX": "clang++",
		"CLAZY_CHECKS": "qt6-deprecated-api-fixes,qt6-header-fixes,qt6-qhash-signature,qt6-qlatin1stringchar-to-u,qt6-fwd-fixes,missing-qobject-macro",
		"CLAZY_IGNORE_DIRS": "build/*"
	    }
	},
	{
	    "name": "ut",
	    "inherits": "ninja-multi",
	    "binaryDir": "${sourceDir}/build/ut",
	    "cacheVariables": {
		"ENABLE_UT": "ON",
		"MEMORYCHECK_SUPPRESSIONS_FILE": "${sourceDir}/qtest.supp"
	    }
	},
	{
	    "name": "ut-clang-tidy",
	    "inherits": ["ut", "clang-tidy"],
	    "generator": "Ninja",
	    "binaryDir": "${sourceDir}/build/ut-clang-tidy"
	}
    ],
    "buildPresets": [
	{
	    "name": "debug",
	    "configurePreset": "ninja-multi",
	    "configuration": "Debug"
	},
	{
	    "name": "release",
	    "configurePreset": "ninja-multi",
	    "configuration": "RelWithDebInfo"
	},
        {
	    "name": "clang-tidy",
	    "configurePreset": "clang-tidy"
	},
	{
	    "name": "clazy",
	    "configurePreset": "clazy"
	},
	{
	    "name": "ut-debug",
	    "configurePreset": "ut",
	    "configuration": "Debug"
	},
	{
	    "name": "ut-release",
	    "configurePreset": "ut",
	    "configuration": "RelWithDebInfo"
	},
	{
	    "name": "ut-clang-tidy",
	    "configurePreset": "ut-clang-tidy"
	}
    ],
    "testPresets": [
	{
	    "name": "ut-debug",
	    "configurePreset": "ut",
	    "output": {
		"outputOnFailure": true
	    },
	    "configuration": "Debug"
	},
	{
	    "name": "ut-release",
	    "configurePreset": "ut",
	    "output": {
		"outputOnFailure": true
	    },
	    "configuration": "RelWithDebInfo"
	}
    ],
    "workflowPresets": [
	{
	    "name": "ut-debug",
	    "steps": [
		{
		    "type": "configure",
		    "name": "ut"
		},
		{
		    "type": "build",
		    "name": "ut-debug"
		},
		{
		    "type": "test",
		    "name": "ut-debug"
		}
	    ]
	},
	{
	    "name": "ut-release",
	    "steps": [
		{
		    "type": "configure",
		    "name": "ut"
		},
		{
		    "type": "build",
		    "name": "ut-release"
		},
		{
		    "type": "test",
		    "name": "ut-release"
		}
	    ]
	},
	{
	    "name": "ut-clang-tidy",
	    "steps": [
		{
		    "type": "configure",
		    "name": "ut-clang-tidy"
		},
		{
		    "type": "build",
		    "name": "ut-clang-tidy"
		}
	    ]
	}
    ]
}
